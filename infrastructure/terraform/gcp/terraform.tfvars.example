# GCP Terraform Variables Example
# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control

# GCP Configuration
gcp_project_id = "sqordia-production"
gcp_region     = "northamerica-northeast2"

# Environment
environment  = "production"
project_name = "sqordia"

# Cloud SQL Configuration
cloud_sql_tier        = "db-f1-micro"  # Use "db-f1-micro" for free tier, or "db-shared-core" for cost optimization
cloud_sql_disk_size   = 10              # 10GB for cost optimization, 20GB default
cloud_sql_database_name = "SqordiaDb"
cloud_sql_user        = "postgres"
cloud_sql_password    = "CHANGE_ME"     # Set a strong password

# Cloud Run Configuration
cloud_run_cpu          = "0.5"
cloud_run_memory       = "1Gi"
cloud_run_min_instances = 0              # 0 for cost optimization, 1 to avoid cold starts
cloud_run_max_instances = 10
cloud_run_timeout      = 300

# Cloud Functions Configuration
cloud_functions_timeout = 300
cloud_functions_memory = 512

# Cloud Storage Configuration
cloud_storage_location = "US"
cloud_storage_class    = "STANDARD"     # STANDARD, NEARLINE, COLDLINE, ARCHIVE

# Cloud Logging Configuration
cloud_logging_retention_days = 3         # 3 days for cost optimization, 7 days default

# Email Configuration
ses_from_email = "noreply@sqordia.com"

# Domain Configuration (optional - leave empty to use Cloud Run default URL)
domain_name = ""

