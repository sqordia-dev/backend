{
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "JwtSettings": {
    "Secret": "${JWT_SECRET}",
    "Issuer": "Sqordia",
    "Audience": "SqordiaUsers",
    "ExpirationInMinutes": 60
  },
  "GoogleOAuth": {
    "ClientId": "${GOOGLE_OAUTH_CLIENT_ID}",
    "ClientSecret": "${GOOGLE_OAUTH_CLIENT_SECRET}",
    "RedirectUri": "${GOOGLE_OAUTH_REDIRECT_URI}"
  },
  "AI": {
    "DefaultProvider": "openai",
    "FallbackProviders": ["claude", "gemini"],
    "OpenAI": {
      "ApiKey": "${OPENAI_API_KEY}",
      "Model": "gpt-4",
      "MaxTokens": 2000
    },
    "Claude": {
      "ApiKey": "${CLAUDE_API_KEY}",
      "Model": "claude-3-sonnet-20240229",
      "MaxTokens": 2000
    },
    "Gemini": {
      "ApiKey": "${GEMINI_API_KEY}",
      "Model": "gemini-pro",
      "MaxTokens": 2000
    }
  },
  "AzureStorage": {
    "AccountName": "${AzureStorage__AccountName}",
    "ConnectionString": "${AzureStorage__ConnectionString}",
    "ContainerName": "${AzureStorage__ContainerName}"
  },
  "AzureServiceBus": {
    "ConnectionString": "${AzureServiceBus__ConnectionString}",
    "EmailTopic": "${AzureServiceBus__EmailTopic}",
    "AiGenerationTopic": "${AzureServiceBus__AiGenerationTopic}",
    "ExportTopic": "${AzureServiceBus__ExportTopic}"
  },
  "AzureKeyVault": {
    "VaultUrl": "${AzureKeyVault__VaultUrl}"
  },
  "Security": {
    "MaxFailedLoginAttempts": 5,
    "LockoutDurationMinutes": 15
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*:/api/auth/login",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "*:/api/auth/register", 
        "Period": "1m",
        "Limit": 3
      },
      {
        "Endpoint": "*:/api/auth/forgot-password",
        "Period": "1m", 
        "Limit": 3
      },
      {
        "Endpoint": "*:/api/auth/reset-password",
        "Period": "1m",
        "Limit": 3
      },
      {
        "Endpoint": "*:/api/auth/send-verification-email",
        "Period": "1m",
        "Limit": 2
      },
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 60
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      }
    ]
  },
  "IpRateLimitPolicies": {
    "IpRules": []
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning",
        "Sqordia": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/sqordia-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "shared": true
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithEnvironmentName"],
    "Properties": {
      "Application": "Sqordia"
    }
  }
}