{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=SqordiaDb;Username=postgres;Password=postgres;SSL Mode=Prefer;Trust Server Certificate=true"
  },
  "JwtSettings": {
    "Secret": "YourSuperSecretKeyThatIsAtLeast32CharactersLongForSecurity123!",
    "Issuer": "Sqordia",
    "Audience": "SqordiaUsers",
    "ExpirationInMinutes": 60
  },
  "GoogleOAuth": {
    "ClientId": "295510443982-46f8941gu47m03j7ka80husou7dndlug.apps.googleusercontent.com",
    "ClientSecret": "${GOOGLE_OAUTH_CLIENT_SECRET}",
    "RedirectUri": "https://localhost:7000/api/v1/auth/google/callback"
  },
  "AI": {
    "DefaultProvider": "openai",
    "FallbackProviders": ["claude", "gemini"],
    "OpenAI": {
      "ApiKey": "",
      "Model": "gpt-4",
      "MaxTokens": 2000
    },
    "Claude": {
      "ApiKey": "",
      "Model": "claude-3-sonnet-20240229",
      "MaxTokens": 2000
    },
    "Gemini": {
      "ApiKey": "",
      "Model": "gemini-pro",
      "MaxTokens": 2000
    }
  },
  "GCP": {
    "ProjectId": "project-b79ef08c-1eb8-47ea-80e"
  },
  "PubSub": {
    "EmailTopic": "email-topic"
  },
  "CloudStorage": {
    "BucketName": "sqordia-documents"
  },
  "Security": {
    "MaxFailedLoginAttempts": 5,
    "LockoutDurationMinutes": 15
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*:/api/auth/login",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "*:/api/auth/register", 
        "Period": "1m",
        "Limit": 3
      },
      {
        "Endpoint": "*:/api/auth/forgot-password",
        "Period": "1m", 
        "Limit": 3
      },
      {
        "Endpoint": "*:/api/auth/reset-password",
        "Period": "1m",
        "Limit": 3
      },
      {
        "Endpoint": "*:/api/auth/send-verification-email",
        "Period": "1m",
        "Limit": 2
      },
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 60
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      }
    ]
  },
  "IpRateLimitPolicies": {
    "IpRules": []
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Sqordia.Infrastructure.Services.OpenAIService": "Information",
      "Sqordia.WebAPI.Controllers.QuestionnaireController": "Information"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning",
        "Sqordia": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/sqordia-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "shared": true
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithEnvironmentName"],
    "Properties": {
      "Application": "Sqordia"
    }
  }
}